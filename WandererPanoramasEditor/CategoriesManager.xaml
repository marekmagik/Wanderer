<Window x:Class="WandererPanoramasEditor.CategoriesManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CategoryManager" Height="300" Width="300">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <ListView ItemsSource="{Binding}" Name="CategoryList">
       
            </ListView>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <Button Click="AddCategory" DockPanel.Dock="Left" Height="30" Margin="20,0" Name="AddCategoryButton" Width="100">Dodaj kategorię</Button>
            <Button Click="RemoveCategory" DockPanel.Dock="Right" Height="30" Margin="10,0" Name="RemoveCategoryButton" Width="100">Usuń kategorię</Button>
        </DockPanel>
    </Grid>
</Window>
