<Window x:Class="WandererPanoramasEditor.AddCategoryDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa kategoria" Height="150" Width="300">
    <Grid Background="Beige">
        <StackPanel>
            <TextBlock Margin="10,10,0,0">Podaj nazwę nowej kategorii:</TextBlock>
            <TextBox Margin="10,5" Height="25" MaxLines="1" MaxLength="40" Name="CategoryNameTextBox"></TextBox>
            <Button Click="addCategory" Margin="10,10" Height="30" HorizontalAlignment="Right" Name="AddCategoryButton" Width="100">Dodaj</Button>
        </StackPanel>
    </Grid>
</Window>
